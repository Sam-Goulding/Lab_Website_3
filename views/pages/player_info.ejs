
<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				  <form action="/player_info/post" method="get">
				  <%
				  	if (player_data) {
				  		var image_src = player_data.img_src;
				  	}
				  	else {
				  		var image_src = '../resources/img/helmet.jpg';
				  	}
				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
				  		<form action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							<option selected>Select Player</option>

							<% 
								if (data) { 
									var player_options = '';
									data.forEach(function(item){
										player_options += '<option value=' + item.id + '>' + item.name + '</option>';
									}); %>
							<%- player_options %> 
							<% } %>
							</form>	
						</select>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<form action="/player_info/post" method="get">

						<tr>
							<th>Name</th>
							<td>
								<% 
								if (player_data) { %>
									<%- player_data.name %>
									<% } %>
							</td>
						</tr>	
						<tr>
							<th>Year</th>
							<td>
								<%
								if (player_data) { %>
									<%- player_data.year %> 
								<% } %>
							</td>
						</tr>
						<tr>
							<th>Major</th>	
							<td>
								<% 
								if (player_data) { %>
                                  <%- player_data.major %>
								<% } %>
							</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td>
								<%
								if (games) { %>
								<%- games %>
								<% } %>
							</td>
						</tr>
						<tr>
							<td>Passing Yards: 
								<%
								if (player_data) { %>
								<%- player_data.passing_yards %>
								<% } %>
							</td>
							<td>Avg. Passing Yards:
								<% 
								if (player_data) { %>
								<%- (player_data.passing_yards/games).toFixed(1) %>
								<% } %>
							</td>
						</tr>
						<tr>
							<td>Rushing Yards:
								<%
								if (player_data) { %>
								<%- player_data.rushing_yards %>
								<% } %>
							</td>
							<td>Avg. Rushing Yards:
								<%
								if (player_data) { %>
								<%- (player_data.rushing_yards/games).toFixed(1) %>
								<% } %>
							</td>
						</tr>
						<tr>
							<td>Receiving Yards:
								<%
								if (player_data) { %>
								<%- player_data.receiving_yards %>
								<% } %>
							</td>
							<td>Avg. Receiving Yards:
								<%
								if (player_data) { %>
								<%- (player_data.receiving_yards/games).toFixed(1) %>
								<% } %>
							</td>
						</tr>
						</form>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>
